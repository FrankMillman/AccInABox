            <</action>>
          "/>
        </frame_methods>
-->
      </grid_frame>

    </body>
    <button_row>
      <button btn_id="btn_rgt" btn_label="Close" btn_enabled="true"
        btn_validate="false" btn_default="true" lng="60" action="
          <<action>>
             <<call method=`on_req_close`/>>
          <</action>>
        "/>
    </button_row>
    <frame_methods>
      <method name="on_req_close" action="
        <<action>>
          <<parent_req_close/>>
        <</action>>
      "/>
    </frame_methods>
  </frame>
</form>
