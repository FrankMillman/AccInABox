<form name="ar_jnl_day" title="Ar charges for day">
  <db_objects>
    <db_obj name="ar_subtran_jnl" table_name="ar_subtran_jnl"/>
  </db_objects>
  <mem_objects>
    <mem_obj name="var" descr="Variables used in form">
      <mem_col col_name="date" data_type="DTE" short_descr="Date"
        long_descr="Date"/>
      <mem_col col_name="jnl_tot" data_type="DEC" short_descr="Charges total"
        long_descr="Charges total passed in as param" db_scale="2" scale_ptr="scale_var.curr_scale"/>
    </mem_obj>
  </mem_objects>
  <input_params>
    <input_param name="date" type="data_attr" target="var.date" required="true"/>
    <input_param name="jnl_tot" type="data_attr" target="var.jnl_tot" required="true"/>
  </input_params>
  <output_params/>
  <frame main_object="ar_subtran_jnl">
    <toolbar/>
    <body>
      <block/>
      <grid data_object="ar_subtran_jnl" growable="false" num_grid_rows="15" readonly="true"
        footer_row="[null, null, null, `var.jnl_tot`, null]"
        assert_tots="[[`jnl_local`, `var.jnl_tot`]]">
        <toolbar template="Query_Form"/>
        <cur_columns>
          <cur_col col_name="tran_date" lng="84"/>
          <cur_col col_name="tran_number" lng="100"/>
          <cur_col col_name="cust_id" lng="100"/>
          <cur_col col_name="jnl_local" lng="100"/>
        </cur_columns>
        <cur_filter>
          <cur_fil test="WHERE" lbr="" col_name="tran_date" op="=" expr="var.date" rbr=""/>
          <cur_fil test="AND" lbr="" col_name="posted" op="=" expr="'1'" rbr=""/>
        </cur_filter>
        <cur_sequence>
          <cur_seq col_name="tran_number"/>
        </cur_sequence>
        <grid_methods template="Grid"/>
      </grid>

    </body>

    <button_row>
      <button btn_id="btn_ok" btn_label="Ok" lng="60" btn_enabled="true"
        btn_validate="true" btn_default="true" action="
          <<end_form state=`completed`/>>
        "/>
    </button_row>
    <frame_methods/>
  </frame>
</form>
