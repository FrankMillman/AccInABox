<form name="inv_ledger_new" title="Set up new inv ledger" on_close_form="
  <<action>>
    <<pyfunc name=`db.cache.menu_updated`/>>
  <</action>>
  ">
  <db_objects>
    <db_obj name="ledger" table_name="inv_ledger_params" is_formview_obj="true"/>
  </db_objects>
  <mem_objects/>
  <input_params/>
  <output_params/>
  <frame main_object="ledger">
    <toolbar/>
    <body>
      <block/>
      <panel/>
      <row/>
      <col/>
      <label value="Warehouse id:"/>
      <col/>
      <input obj_name="ledger" col_name="ledger_id" lng="60" validation="
        <<validations>>
          <<validation>>
            <<case>>
              <<obj_exists obj_name=`ledger`>>
                <<init_obj obj_name=`ledger`/>>
                <<error head=`Parameter` body=`Already exists`/>>
              <</obj_exists>>
            <</case>>
          <</validation>>
        <</validations>>
        "/>
      <row/>
      <col/>
      <label value="Description:"/>
      <col/>
      <input obj_name="ledger" col_name="descr" lng="160"/>

    </body>
    <button_row template="Setup_Form_Single"/>
    <frame_methods template="Setup_Form_Single">
    </frame_methods>
  </frame>
</form>
